#import "UINavigationController+MDF.h"

@implementation UINavigationController (MDF)

- (NSArray *)mdf_popToLastViewController:(Class)viewControllerClass
{
    NSArray *viewControllers = self.viewControllers;
    if (viewControllers.count <= 0) {
        return nil;
    }
    UIViewController *popToViewController = nil;
    for (int i = (int)viewControllers.count - 1; i >= 0 ; i--) {
        if ([[viewControllers mdf_safeObjectAtIndex:i] isKindOfClass:viewControllerClass]) {
            popToViewController = [viewControllers mdf_safeObjectAtIndex:i];
            break;
        }
    }
    if (popToViewController) {
        return [self popToViewController:popToViewController animated:YES];
    }
    return nil;
}

@end
