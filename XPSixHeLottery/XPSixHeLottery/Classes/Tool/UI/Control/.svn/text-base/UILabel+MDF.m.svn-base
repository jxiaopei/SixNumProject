#import "UILabel+MDF.h"

@implementation UILabel (MDF)

+ (instancetype)mdf_labelWithTextAlignment:(NSTextAlignment)alignment
{
    return [self mdf_labelWithTextAlignment:alignment autoLayout:YES];
}

+ (instancetype)mdf_labelWithTextAlignment:(NSTextAlignment)alignment autoLayout:(BOOL)autoLayout
{
    UILabel *label = nil;
    if (autoLayout) {
        label = [[self alloc] initForAutoLayout];
    } else {
        label = [[self alloc] init];
    }
    label.backgroundColor = [UIColor clearColor];
    label.textAlignment = alignment;
    return label;
}

+ (UILabel *)mdf_clone:(UILabel *)label
{
    UILabel *cloned = [[UILabel alloc] init];
    cloned.backgroundColor = label.backgroundColor;
    cloned.textColor = label.textColor;
    cloned.font = label.font;
    cloned.textAlignment = label.textAlignment;
    cloned.shadowColor = label.shadowColor;
    cloned.shadowOffset = label.shadowOffset;
    cloned.numberOfLines = label.numberOfLines;
    cloned.lineBreakMode = label.lineBreakMode;
    cloned.highlightedTextColor = label.highlightedTextColor;
    cloned.translatesAutoresizingMaskIntoConstraints = label.translatesAutoresizingMaskIntoConstraints;
    return cloned;
}

@end
