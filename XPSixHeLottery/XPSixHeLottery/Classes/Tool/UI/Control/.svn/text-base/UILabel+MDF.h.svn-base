#import <UIKit/UIKit.h>

@interface UILabel (MDF)

// 返回对应alignment的label 默认label使用autoLayout
+ (instancetype)mdf_labelWithTextAlignment:(NSTextAlignment)alignment;

// 返回对应alignment的label autolayout 属性标记是否使用autoLayout
+ (instancetype)mdf_labelWithTextAlignment:(NSTextAlignment)alignment autoLayout:(BOOL)autoLayout;

// 返回与label各主要属性一致的UILabel
+ (UILabel *)mdf_clone:(UILabel *)label;

@end
